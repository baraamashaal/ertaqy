md-card
  md-toolbar.md-table-toolbar.md-default(ng-hide='selected.length || filter.show')
    .md-toolbar-tools
      h2.md-title Nutrition
      div(flex='')
      md-button.md-icon-button(ng-click='filter.show = true')
        md-icon filter_list
      md-button.md-icon-button(ng-click='addItem($event)')
        md-icon local_dining
  md-toolbar.md-table-toolbar.md-default(ng-show='filter.show && !selected.length')
    .md-toolbar-tools
      md-icon search
      form(flex='', name='filter.form')
        input(type='text', ng-model='query.filter', ng-model-options='filter.options', placeholder='search')
      md-button.md-icon-button(ng-click='removeFilter()')
        md-icon close
  md-toolbar.md-table-toolbar.alternate(ng-show='selected.length')
    .md-toolbar-tools(layout-align='space-between')
      div {{selected.length}} {{selected.length > 1 ? 'items' : 'item'}} selected
      md-button.md-icon-button(ng-click='delete($event)')
        md-icon delete
  md-table-container
    table(md-table='', md-row-select='', multiple='', ng-model='selected', md-progress='promise')
      thead(md-head='', md-order='query.order', md-on-reorder='getDesserts')
        tr(md-row='')
          th(md-column='', md-order-by='nameToLower')
            span Dessert (100g serving)
          th(md-column='', md-numeric='', md-order-by='calories.value')
            span Calories
          th(md-column='', md-numeric='') Fat (g)
          th(md-column='', md-numeric='') Carbs (g)
          th(md-column='', md-numeric='') Protein (g)
          th(md-column='', md-numeric='') Sodium (mg)
          th(md-column='', md-numeric='') Calcium (%)
          th(md-column='', md-numeric='') Iron (%)
      tbody(md-body='')
        tr(md-row='', md-select='dessert', md-select-id='name', md-auto-select='', ng-repeat='dessert in desserts')
          td(md-cell='') {{dessert.name}}
          td(md-cell='') {{dessert.calories.value}}
          td(md-cell='') {{dessert.fat.value | number: 1}}
          td(md-cell='') {{dessert.carbs.value}}
          td(md-cell='') {{dessert.protein.value | number: 1}}
          td(md-cell='') {{dessert.sodium.value}}
          td(md-cell='') {{dessert.calcium.value}}{{dessert.calcium.unit}}
          td(md-cell='') {{dessert.iron.value}}{{dessert.iron.unit}}
  md-table-pagination(md-limit='query._limit', md-limit-options='[5, 10, 15]', md-page='query._page', md-total='2600', md-on-paginate='getDesserts', md-page-select='')
