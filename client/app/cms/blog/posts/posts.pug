md-card
  //- md-toolbar.md-table-toolbar.md-default(ng-hide='$ctrl.isSelectedRows()')
    .md-toolbar-tools
      span Nutrition
      div(flex='')
      md-button.md-icon-button(ng-click='loadStuff()')
        md-icon refresh
  //- md-toolbar.md-table-toolbar.alternate(ng-show='options.rowSelection && selected.length')
    .md-toolbar-tools
      span {{selected.length}} {{selected.length > 1 ? 'items' : 'item'}} selected
  md-toolbar.md-table-toolbar(ng-class='$ctrl.isSelectedRows() ? "alternate" : "md-default"')
    .md-toolbar-tools(ng-if='! $ctrl.isSelectedRows()')
      span Nutrition
      div(flex='')
      md-button.md-icon-button(ng-click='')
      md-icon refresh
    .md-toolbar-tools(ng-if='$ctrl.isSelectedRows()')
      span {{$ctrl.selectedRows.length}} {{$ctrl.selectedRows.length > 1 ? 'items' : 'item'}} selected
  md-table-container
    table(md-table, md-row-select, multiple, md-progress='promise')
      thead(md-head, md-on-reorder='$ctrl.onreOrder')
        tr(md-row)
          th(md-column,)
            span title
          th(md-column,)
            span status
          th(md-column,)
            span auther
          th(md-column,)
            span comments
          th(md-column,)
            span date
          th(md-column,)
            span url
      tbody(md-body)
        tr(md-row, md-select='post', md-on-select='$ctrl.onSelect', md-auto-select, ng-disabled='post.calories.value > 400', ng-repeat='post in $ctrl.posts | filter: filter.search | orderBy: query.order | limitTo: query.limit : (query.page -1) * query.limit')
          td(md-cell) {{post.name}}
          td(md-cell)
            md-select(ng-model='post.type', placeholder='Other')
              md-option(ng-value='type', ng-repeat='type in getTypes()') {{type}}
          td(md-cell) {{post.calories.value}}
          td(md-cell) {{post.fat.value | number: 2}}
          td(md-cell) {{post.carbs.value}}
          td(md-cell) {{post.protein.value | number: 2}}
          td(md-cell, hide-gt-xs='', show-gt-md='') {{post.sodium.value}}
          td(md-cell, hide-gt-xs='', show-gt-lg='') {{post.calcium.value}}%
          td(md-cell, hide-gt-xs='', show-gt-lg='') {{post.iron.value}}%
          td(md-cell, ng-click='editComment($event, dessert)', ng-class="{'md-placeholder': !post.comment}")
            | {{post.comment || 'Add a comment'}}
